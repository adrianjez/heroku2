<div class="wrapper">
    <div class="header header-filter" style="background-image: url(<%= movie.background_image %>);">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="brand">
                        <h1><%= movie.name %></h1>
                        <br>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="main main-raised">
        <div class="section section-basic">


            <div class="container">
                <h1><%= movie.name %></h1>

                <div class="row">
                    <div class="brand">
                        <img src="<%= movie.label_image %>" alt="Raised Image" width="200px" height="200px" class="img-circle">
                    </div>
                </div>


                <div class="container text-center">
                    <h2>Description</h2>
                    <h4><%= movie.description %></h4>
                </div>

                <div class="container text-center">
                    <h2>Genre</h2>
                    <h4><%= movie.gatunek %></h4>
                </div>

                <div class="container text-center">
                    <h2>Directed by</h2>
                    <h4><%= movie.rezyseria %></h4>
                </div>

                <div class="container text-center">
                    <h2>Written by</h2>
                    <h4><%= movie.scenariusz %></h4>
                </div>

                <div class="container text-center">
                                <h2>Produkcja</h2>
                                <h4><%= movie.produkcja %></h4>
                </div>


                <div class="container text-center">
                    <h2>Release date</h2>
                    <h4><%= movie.premiera %></h4>
                </div>

                <div class="section">
                    <h2>Cast</h2>

                    <div class="table-responsive-vertical shadow-z-1 signin-card">

                        <table id="table" class="table table-hover table-mc-light-blue">
                            <thead>
                            <tr>
                                <th>Photo</th>
                                <th>Title</th>
                                <th>Year</th>
                                <th>Rate</th>
                                <th colspan=2>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% cast.forEach(function(item) { %>
                            <tr>
                                <td data-title="Photo">
                                    <img class="img-circle" width="100" height="100" style="border-radius:50%" src=<%= item.image %>>
                                </td>
                                <td data-title="Name"><%= item.name %></td>
                                <td data-title="Spouse"> <%= item.spouse %></td>
                                <td data-title="Date of birth"> <%= item.dob %></td>

                            </tr>
                            <% }); %>

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <footer class="footer">
        <div class="container">
            <nav class="pull-left">
                <ul>
                    <li>
                        <a href="/">
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="/movies">
                            Movies
                        </a>
                    </li>
                    <li>
                        <a href="/actors">
                            Actors
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="copyright pull-right">
                Adrian Je≈º
            </div>
        </div>
    </footer>
</div>



